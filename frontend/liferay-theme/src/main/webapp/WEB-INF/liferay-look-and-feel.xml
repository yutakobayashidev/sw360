<look-and-feel>
	<compatibility>
		<version>7.4.3+</version>
	</compatibility>
	<theme id="sw360" name="SW360">
		<template-extension>ftl</template-extension>
		<settings>
			<setting configurable="true" key="hide-portlet-edit-decorators" type="checkbox" value="false" />
			<setting configurable="true" key="show-breadcrumbs" type="checkbox" value="true" />
		</settings>
		<roles>
			<role-name>User</role-name>
		</roles>
		<layout-templates>
			<custom>
				<layout-template id="2_columns_sidebar" name="2 Columns w/ sidebar">
					<template-path>/layoutttpl/custom/2_columns_sidebar.ftl</template-path>
					<thumbnail-path>/layoutttpl/custom/2_columns_sidebar.png</thumbnail-path>
				</layout-template>
			</custom>
		</layout-templates>
		<portlet-decorator id="sw360" name="SW360">
			<default-portlet-decorator>true</default-portlet-decorator>
			<portlet-decorator-css-class>sw360-portlet-decorator</portlet-decorator-css-class>
		</portlet-decorator>
	</theme>
</look-and-feel>
